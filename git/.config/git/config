[push]
	default = simple
[core]
	editor = nvim
	whitespace = blank-at-eol,space-before-tab
	excludesfile = ~/.config/git/ignore
	trustctime = false
[rerere]
	enabled = true
[merge]
	conflictstyle = diff3
