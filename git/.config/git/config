	templatedir = ~/.config/git/templates

[merge]
  tool = nvim
[mergetool]
  prompt = true
[mergetool "nvim"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[merge] tool = mymeld 
    conflictstyle = diff3 
[mergetool "mymeld"] cmd = meld $LOCAL $BASE $REMOTE --output $MERGED 
[pull]
	ff = only
