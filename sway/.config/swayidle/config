timeout 650 swaylock

timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"'

after-resume  'swaymsg "output * power on"'
timeout 600 'hyprctl dispatch dpms off  2>/dev/null || true' resume 'hyprctl dispatch dpms on 2>/dev/null || true'
after-resume 'hyprctl dispatch dpms on 2>/dev/null || true'

timeout 600 'niri msg action power-off-monitors 2>/dev/null || true'

lock swaylock
before-sleep 600 swaylock
